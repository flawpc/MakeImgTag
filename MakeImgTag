javascript:(function() { function htmlEscape(s){s=s.replace(/&/g,'&amp;');s=s.replace(/>/g,'&gt;');s=s.replace(/</g,'&lt;');return s;} var img = document.images[0]; var textToCopy = '<img width="' + (img.naturalWidth || img.width) + '" height="' + (img.naturalHeight || img.height) + '" src="' + htmlEscape(img.src) + '" alt="" />\n'; document.close(); document.write("<form name=f><textarea name=ta cols=80 rows=5></textarea></form>"); document.close(); document.f.ta.value = textToCopy; document.f.ta.select(); })()
